generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ============================
 * BUSINESS
 * ============================
 */

model Business {
  id      String       @id @default(cuid())
  name    String
  address String
  phone   String
  email   String       @unique
  plan    BusinessPlan @default(ADVANCED)

  businessHours       Json  @default("{}")
  specialDays         Json?
  defaultSlotInterval Int   @default(30)

  deletedAt DateTime?

  users        User[]
  clients      BusinessClient[]
  services     Service[]
  appointments Appointment[]
  blockedTimes BlockedTime[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * ============================
 * USER (EMPLOYEE / ADMIN)
 * ============================
 */

model User {
  id       String  @id @default(cuid())
  name     String
  phone    String?
  email    String  @unique
  password String

  role      UserRole  @default(EMPLOYEE)
  deletedAt DateTime?

  appointments Appointment[]
  services     UserService[]
  schedules    UserSchedule[]
  blockedTimes BlockedTime[]

  businesses Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  businessId String

  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  appointmentServices AppointmentService[]

  @@unique([email, deletedAt])
}

/**
 * ============================
 * EMPLOYEE SCHEDULE (Bloques)
 * ============================
 */

model UserSchedule {
  id String @id @default(cuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  dayOfWeek WeekDay

  startTime String
  endTime   String

  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * ============================
 * BLOCKED TIMES (global o empleado)
 * ============================
 */

model BlockedTime {
  id    String   @id @default(cuid())
  date  DateTime
  start String
  end   String

  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  businessId String

  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * ============================
 * BUSINESS CLIENT & CLIENT
 * ============================
 */

model BusinessClient {
  id        String    @id @default(cuid())
  deletedAt DateTime?

  notes        Note[]
  appointments Appointment[]

  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  businessId String

  client   Client @relation(fields: [clientId], references: [id])
  clientId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([businessId, clientId])
}

model Client {
  id          String  @id @default(cuid())
  name        String
  email       String?
  phone       String  @unique
  token       String?
  isConfirmed Boolean @default(false)

  businesses BusinessClient[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * ============================
 * APPOINTMENTS
 * ============================
 */

model Appointment {
  id String @id @default(cuid())

  date        DateTime
  startTime   String
  endTime     String
  durationMin Int

  startTimeMinutes Int
  endTimeMinutes   Int

  status AppointmentStatus @default(SCHEDULED)

  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  businessId String

  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId String?

  businessClient   BusinessClient @relation(fields: [businessClientId], references: [id], onDelete: Cascade)
  businessClientId String

  services AppointmentService[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([businessId, date, status])
}

/**
 * ============================
 * SERVICES
 * ============================
 */

model Service {
  id              String  @id @default(cuid())
  name            String
  durationMin     Int
  cleaningTimeMin Int     @default(0)
  price           Float
  description     String?
  imageUrl        String?
  category        String?

  isActive Boolean @default(true)

  appointments AppointmentService[]
  users        UserService[]

  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  businessId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([businessId])
}

model AppointmentService {
  id String @id @default(cuid())

  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  appointmentId String

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String

  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([appointmentId, serviceId])
  @@index([appointmentId])
  @@index([userId])
}

/**
 * ============================
 * USER â†” SERVICE
 * ============================
 */

model UserService {
  id String @id @default(cuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, serviceId])
}

/**
 * ============================
 * NOTES
 * ============================
 */

model Note {
  id        String    @id @default(cuid())
  content   String
  deletedAt DateTime?

  businessClientId String
  client           BusinessClient @relation(fields: [businessClientId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * ============================
 * CATEGORIES
 * ============================
 */

/**
 * ============================
 * ENUMS
 * ============================
 */

enum WeekDay {
  sunday
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
}

enum BusinessPlan {
  BASIC
  INTERMEDIATE
  ADVANCED
}

enum UserRole {
  ADMIN
  EMPLOYEE
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  COMPLETED
  CANCELED
}
